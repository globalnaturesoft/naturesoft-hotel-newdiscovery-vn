<section class="parallax-window" data-parallax="scroll" data-image-src="<%= @gallery.get_main_image.image %>" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1><%= @gallery.name %></h1>
            <p><%= @gallery.description %></p>
        </div>
    </div>
</section>
<!-- End Section -->

<div id="position">
    <div class="container">
        <ul>
            <li><%= link_to "Trang Chủ", naturesoft_hotel_newdiscovery_vn.root_path %></li>
            <li><%= link_to "Thư viện ảnh", "" %></li>
            <li><%= @gallery.name %></li>
        </ul>
    </div>
</div>
<!-- End Position -->

<div class="container margin_60">
    <div class="main_title">
        <h2><%= @gallery.name %></h2>
        <p><%= @gallery.description %></p>
    </div>
    <hr>
    <div class="row magnific-gallery add_bottom_60 ">
        <% @gallery.images.order("custom_order ASC").each do |img| %>
            <div class="col-md-3 col-sm-3">
                <div class="img_wrapper_gallery">
                    <div class="img_container_gallery">
                        <a href="<%= img.image %>" title="<%= img.name %>"><img src="<%= img.image.thumb %>" alt="Image" class="img-responsive">
                            <i class="icon-resize-full-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <!-- End row -->
</div>
<!-- End container -->