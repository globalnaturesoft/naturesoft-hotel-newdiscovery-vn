            <div class="step">

                <div id="message-contact"></div>
                <form>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Họ (*)</label>
                                <input type="text" class="form-control" placeholder="Nhập họ tại đây...">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Tên (*)</label>
                                <input type="text" class="form-control" placeholder="Nhập tên tại đây...">
                            </div>
                        </div>
                    </div>
                    <!-- End row -->
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Nhập địa chỉ email tại đây...">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Số điện thoại (*)</label>
                                <input type="text" class="form-control" placeholder="Nhập số điện thoại tại đây...">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Lời nhắn (*)</label>
                                <textarea rows="5" class="form-control" placeholder="Nhập nội dung lời nhắn cần gửi tại đây..." style="height:200px;"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Xác nhận không phải là máy</label>
                            <input type="text" class=" form-control add_bottom_30" placeholder="Nhập đáp án? 3 + 1 =">
                            <input type="submit" value="Gửi lời nhắn" class="btn_1">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- End col-md-8 -->

        <div class="col-md-4 col-sm-4">
