<section class="parallax-window" data-parallax="scroll" data-image-src="<%= !@current_menu.nil? ? @current_menu.image.default : nil %>" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1><%= @current_menu.name %></h1>
            <p><%= @current_menu.description %></p>
        </div>
    </div>
</section>
<!-- End Section -->

<div id="position">
    <div class="container">
        <ul>
            <li><%= link_to "Trang Chủ", naturesoft_hotel_newdiscovery_vn.root_path %></li>
            <li><%= @current_menu.name %></li>
        </ul>
    </div>
</div>
<!-- End Position -->

<div class="container margin_60">
    <div class="row">
        <div class="col-md-8 col-sm-8">
            <div class="form_title">
                <h3><strong><i class="icon-pencil"></i></strong>Gửi lời nhắn cho chúng tôi</h3>
                <p>(*) Những thông tin bắt buộc cần được nhập.</p>
            </div>
            <div class="step">
                <%= form_for Naturesoft::Contacts::Contact.new, url: "", html: {class: "contact_validate"} do |f| %>
                <%= hidden_field_tag(:id, params[:id]) %>
                    <div id="message-contact">
                        <% if notice.present? %>
                            <div id="success_page" style="padding:20px 0">
                                <strong>Cảm ơn! </strong><br>Tin nhắn của bạn đã được gửi. Chúng tôi sẽ sớm liên lạc lại với bạn.
                            </div>
                        <% end %>
                    </div>
                    <% if !notice.present? %>
                        <!--<form>-->
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label>Họ và đệm (*)</label>
                                        <input type="text" class="form-control required" name="contact[first_name]" placeholder="Nhập họ và tên đệm...">
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label>Tên (*)</label>
                                        <input type="text" class="form-control required" name="contact[last_name]" placeholder="Nhập tên...">
                                    </div>
                                </div>
                            </div>
                            <!-- End row -->
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label>Email (*)</label>
                                        <input type="email" class="form-control required email" name="contact[email]" placeholder="Nhập địa chỉ email...">
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label>Số điện thoại (*)</label>
                                        <input type="text" class="form-control phone_contact required" name="contact[phone]" placeholder="Nhập số điện thoại...">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Lời nhắn (*)</label>
                                        <textarea rows="5" class="form-control required" name="msg[message]" placeholder="Nhập nội dung lời nhắn cần gửi..." style="height:200px;"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <button class="btn_1">Gửi lời nhắn</button>
                                </div>
                            </div>
                        <!--</form>-->
                    <% end %>
                <% end %>
            </div>
        </div>
        <!-- End col-md-8 -->

        <div class="col-md-4 col-sm-4">
            <div class="box_style_1">
                <span class="tape"></span>
                <% if @contact_info.present? %>
                    <h4>Địa chỉ <span><i class="icon-pin pull-right"></i></span></h4>
                    <p><strong>Trụ sở chính: </strong><%= @contact_info.head_office %></p>
                    <p><strong>Chi nhánh: </strong><%= @contact_info.branch_office %></p>
                    <hr>
                    <h4>Liên hệ <span><i class="icon-help pull-right"></i></span></h4>
                    <strong><%= @contact_info.company %></strong>
                    <ul id="contact-info">
                        <li><strong>Người đại diện:  </strong><%= @contact_info.agent %></li>
                        <li><strong>Số chứng nhận kinh doanh:  </strong><%= @contact_info.certificate_of_business_registration_no %></li>
                        <li><strong>Cấp ngày:  </strong><%= @contact_info.date_of_issue %></li>
                        <li><strong>Nơi cấp:  </strong><%= @contact_info.place_of_issue %></li>
                        <li><strong>Tel:  </strong><%= @contact_info.phone %> - <%= @contact_info.phone_2 %></li>
                        <li><strong>Fax:  </strong><%= @contact_info.fax %></li>
                        <li><a href="mailto:<%= @contact_info.email %>"><%= @contact_info.email %></a></li>
                        <li><a href="mailto:<%= @contact_info.email_2 %>"><%= @contact_info.email_2 %></a></li>
                    </ul>
                <% end %>
            </div>
            <div class="box_style_4">
                <%= position("hotel_newdiscovery_vn::hotline-module") %>
            </div>
        </div>
        <!-- End col-md-4 -->
    </div>
    <!-- End row -->
</div>
<!-- End container -->

<div id="map_contact"></div>
<!-- end map-->
<div id="directions">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <form action="http://maps.google.com/maps" method="get" target="_blank">
                    <div class="input-group">
                    <input type="text" name="saddr" placeholder="Nhập điểm bắt đầu của bạn" class="form-control style-2" />
                    <input type="hidden" name="daddr" value="114 Ngô Quyền, Phường 5, Quận 10, Tp Hồ Chí Minh, Việt Nam" />
                    <!-- Write here your end point -->
                    <span class="input-group-btn">
					<button class="btn" type="submit" value="Nhận tìm đường từ google" style="margin-left:0;">Tìm đường</button>
					</span>
                    </div>
                    <!-- /input-group -->
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end directions-->