<div class="main_title">
    <h2>Top <span>điểm đến</span></h2>
    <p><%= options["description"] %></p>
</div>

<div class="row">
    <% areas.each do |item| %>
        <div class="col-md-4 col-sm-6 wow zoomIn" data-wow-delay="0.1s">
            <div class="tour_container">
                <div class="img_container">
                    <a href="<%= naturesoft_hotels.hotel_detail_path(hotel_id: item.id, title: url_friendly(item.name)) %>">
                    <% if item.image.present? %>
                    <%= image_tag(item.image, alt: "", class: "img-responsive") %>
                    <% else %>
                    <%= image_tag("/frontend/img/no-img.png", alt: "", class: "img-responsive") %>
                    <% end %>
                    </a>
                    <div class="short_info">
                        <i class="icon_set_1_icon-6"></i>Khách Sạn<span class="price">(Có 50 khách sạn)</span>
                    </div>
                    <div class="ribbon popular"></div>
                </div>
                <div class="tour_title">
                    <h3><strong><%= link_to item.name, naturesoft_hotels.hotel_detail_path(hotel_id: item.id, title: url_friendly(item.name)) %></strong></h3>
                </div>
            </div>
            <!-- End box tour -->
        </div>
        <!-- End col-md-4 -->
    <% end %>
</div>