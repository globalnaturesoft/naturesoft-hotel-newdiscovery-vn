<% slideshow.slides.order(custom_order: "asc").where(status: "active").each do |item| %> 
    <div class="ls-slide" data-ls="slidedelay: 5000; transition2d:5;">
        <%= image_tag(item.image.thumb, {class: "ls-bg", alt: "Slide background: 1800x700"}) %>
        <h3 class="ls-l slide_typo" style="top: 45%; left: 50%;" data-ls="offsetxin:0;durationin:2000;delayin:1000;easingin:easeOutElastic;rotatexin:90;transformoriginin:50% bottom 0;offsetxout:0;rotatexout:90;transformoriginout:50% bottom 0;"><%= item.name %></h3>
        <p class="ls-l slide_typo_2" style="top:52%; left:50%;" data-ls="durationin:2000;delayin:1000;easingin:easeOutElastic;"><%= item.description %></p>
        <a class="ls-l button_intro_2 outline" style="top:370px; left:50%;white-space: nowrap;" data-ls="durationin:2000;delayin:1400;easingin:easeOutElastic;" href='all_tour_list.html'>Read more</a></p>
    </div>
<% end %>