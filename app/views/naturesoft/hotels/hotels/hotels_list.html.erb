<section class="parallax-window" data-parallax="scroll" data-image-src="<%= !@current_menu.nil? ? @current_menu.image.default : nil %>" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1><%= @current_menu.name %></h1>
            <p><%= @current_menu.description %></p>
        </div>
    </div>
</section>
<!-- End section -->

<div id="position">
    <div class="container">
        <ul>
            <li><%= link_to "Trang Chủ", naturesoft_hotel_newdiscovery_vn.root_path %></li>
            <li><%= @current_menu.name %></li>
        </ul>
    </div>
</div>
<!-- Position -->

<div class="container margin_60">

    <div class="row">
        <aside class="col-lg-3 col-md-3">
            <%= render "/modules/hotel_sidebar" %>
        </aside>
        <!--End aside -->

        <div class="col-lg-9 col-md-9">

            <div id="tools">
                <div class="row">
                    <%= render "/modules/hotel_sort" %>
                    <div class="col-md-9 col-sm-9 hidden-xs text-right">
                        <a href="<%= naturesoft_hotels.hotels_grid_path(menu_id: @current_menu) %>" class="bt_filters"><i class="icon-th"></i></a>
                        <a class="bt_filters"><i class=" icon-list"></i></a>
                    </div>
                </div>
            </div>
            <!--/tools -->
            
            <% @hotels.each do |item| %>
            <div class="strip_all_tour_list wow fadeIn" data-wow-delay="0.1s">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <% if current_user.present? %>
                            <% if Naturesoft::Hotels::WishList.check_present(item.id, current_user).count == 0 %>
                                <div class="wishlist">
                                    <%= link_to '+<span class="tooltip-content-flip"><span class="tooltip-back">Yêu thích khách sạn</span></span>'.html_safe, naturesoft_hotels.add_item_wish_lists_path(hotel_id: item.id, user_id: current_user.id), class: "tooltip_flip tooltip-effect-1" %>
                                </div>
                            <% else %>
                                <div class="wishlist hotel-loved">
                                <a class="tooltip_flip tooltip-effect-1" href="javascript:void(0);">+<span class="tooltip-content-flip"><span class="tooltip-back">Đã yêu thích khách sạn</span></span></a>
                                </div>
                            <% end %>
                        <% else %>
                            <div class="wishlist">
                                <%= link_to '+<span class="tooltip-content-flip"><span class="tooltip-back">Bạn chưa đăng nhập</span></span>'.html_safe, naturesoft.login_path, class: "tooltip_flip tooltip-effect-1" %>
                            </div>
                        <% end %>
                        <div class="img_list">
                            <a href="<%= naturesoft_hotels.hotel_detail_path(hotel_id: item.id) %>">
                                <!--<div class="ribbon popular"></div>-->
                                <% if item.hotel_images.count > 0 %><%= image_tag(item.get_main_image.image.large, alt: item.name) %><% else %><%= image_tag("/frontend/img/no-img.png", alt: item.name) %><% end %>
                                <div class="short_info"></div>
                            </a>
                        </div>
                    </div>
                    <div class="clearfix visible-xs-block"></div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="tour_list_desc">
                            <div class="score">Tuyệt vời<span>9.0</span></div>
                            <div class="rating"><% (1..item.star).each do |item| %><i class="icon-star voted"></i><% end %></div>
                            <h3><strong><%= link_to item.name, naturesoft_hotels.hotel_detail_path(hotel_id: item.id), title: item.name %></strong></h3>
                            <div class="text-justify"><p><%= item.address %></p></div>
                            <ul class="list_ok">
                                <% item.facilities.limit(4).each do |item| %>
                                <li><%= item.name %></li>
                                <% end %>
                           </ul>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="price_list">
                            <div>
                                <%= format_number(item.from_per_night) %> VNĐ<small>*Giá/Đêm</small>
                                <p><%= link_to "Chi tiết", naturesoft_hotels.hotel_detail_path(hotel_id: item.id), class: "btn_1" %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End strip -->
            <% end %>

            <hr>

            <div class="text-center">
                <%= will_paginate @hotels, previous_label: 'Trang trước', next_label: 'Trang sau', renderer: BootstrapPagination::Rails %>
            </div>
            <!-- end pagination-->

        </div>
        <!-- End col lg-9 -->
    </div>
    <!-- End row -->
</div>
<!-- End container -->