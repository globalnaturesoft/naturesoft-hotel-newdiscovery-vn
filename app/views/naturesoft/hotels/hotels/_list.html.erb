<% @hotels.each do |item| %>
    <div class="strip_all_tour_list wow fadeIn" data-wow-delay="0.1s">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <% if current_user.present? %>
                    <% if Naturesoft::Hotels::WishList.check_present(item.id, current_user).count == 0 %>
                        <div class="wishlist">
                            <%= link_to '+<span class="tooltip-content-flip"><span class="tooltip-back">Yêu thích khách sạn</span></span>'.html_safe, naturesoft_hotels.add_item_wish_lists_path(hotel_id: item.id, user_id: current_user.id), class: "tooltip_flip tooltip-effect-1" %>
                        </div>
                    <% else %>
                        <div class="wishlist hotel-loved">
                        <a class="tooltip_flip tooltip-effect-1" href="javascript:void(0);">+<span class="tooltip-content-flip"><span class="tooltip-back">Đã yêu thích khách sạn</span></span></a>
                        </div>
                    <% end %>
                <% else %>
                    <div class="wishlist">
                        <%= link_to '+<span class="tooltip-content-flip"><span class="tooltip-back">Bạn chưa đăng nhập</span></span>'.html_safe, naturesoft.new_user_session_path, class: "tooltip_flip tooltip-effect-1" %>
                    </div>
                <% end %>
                <div class="img_list">
                    <a href="<%= naturesoft_hotels.hotel_detail_path(hotel_id: item.id, title: url_friendly(item.name)) %>">
                        <div class="ribbon_3 favorite"><span>Yêu thích</span></div>
                        <% if item.hotel_images.count > 0 %><%= image_tag(item.get_main_image.image.large, alt: item.name) %><% else %><%= image_tag("/frontend/img/no-img.png", alt: item.name) %><% end %>
                        <div class="short_info"></div>
                    </a>
                </div>
            </div>
            <div class="clearfix visible-xs-block"></div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="tour_list_desc">
                    <% if item.reviews.get_active.count > 0 %>
                    <div class="score"><span><%= item.avg_reviews %></span> <%= item.rating_reviews %></div>
                    <% end %>
                    <div class="rating"><% (1..item.star).each do |item| %><i class="icon-star voted"></i><% end %></div>
                    <h3><strong><%= link_to item.name, naturesoft_hotels.hotel_detail_path(hotel_id: item.id, title: url_friendly(item.name)), title: item.name %></strong></h3>
                    <div class="text-justify"><p><%= item.address %></p></div>
                    <ul class="list_ok">
                        <% item.facilities.limit(4).each do |item| %>
                        <li><%= item.name %></li>
                        <% end %>
                   </ul>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2">
                <div class="price_list">
                    <div>
                        <%= format_number(item.from_per_night) %> VNĐ<!--<span class="normal_price_list">12,000,000 VNĐ</span>--><small>*Giá/Đêm</small>
                        <p><%= link_to "Chi tiết", naturesoft_hotels.hotel_detail_path(hotel_id: item.id, title: url_friendly(item.name)), class: "btn_1" %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End strip -->
<% end %>
