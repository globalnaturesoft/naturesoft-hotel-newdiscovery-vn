<section class="parallax-window" data-parallax="scroll" data-image-src="<% if @detail.get_main_image.present? %><%= @detail.get_main_image.image.detail_bg %><% else %>/frontend/img/single_hotel_bg_1.jpg<% end %>" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-2">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8">
                    <span class="rating"><% (1..@detail.star).each do |item| %><i class="icon-star voted"></i><% end %></span>
                    <h1><%= @detail.name %></h1>
                    <span><%= @detail.address %>.</span>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div id="price_single_main" class="hotel">
                        Giá/đêm <span><%= format_number(@detail.from_per_night) %> VNĐ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End section -->

<div id="position">
    <div class="container">
        <ul>
            <li><%= link_to "Trang chủ", naturesoft_hotel_newdiscovery_vn.root_path %></li>
            <li><%= link_to "Danh sách khách sạn", naturesoft_hotels.hotels_grid_path %></li>
            <li><%= @detail.name %></li>
        </ul>
    </div>
</div>
<!-- End Position -->


<div class="collapse" id="collapseMap">
    <div id="map" class="map"></div>
</div>
<!-- End Map -->

<div class="container margin_60">
    <div class="row">
        <div class="col-md-8" id="single_tour_desc">
            <div id="single_tour_feat">
                <ul>
                    <li><i class="icon_set_2_icon-116"></i>TV truyền hình cáp</li>
                    <li><i class="icon_set_1_icon-86"></i>Wifi miễn phí</li>
                    <li><i class="icon_set_2_icon-110"></i>Hồ bơi</li>
                    <li><i class="icon_set_1_icon-59"></i>Miễn phí ăn sáng</li>
                    <li><i class="icon_set_1_icon-22"></i>Chăm sóc thú cưng</li>
                    <li><i class="icon_set_3_restaurant-10"></i>Tiệc ngoài trời</li>
                    <li><i class="icon_set_1_icon-27"></i>Bãi đổ xe</li>
                </ul>
            </div>
            <p class="visible-sm visible-xs"><a class="btn_map" data-toggle="collapse" href="#collapseMap" aria-expanded="false" aria-controls="collapseMap">View on map</a></p>
            <!-- Map button for tablets/mobiles -->
            <% if @detail.get_main_image.present? %>
            <div id="Img_carousel" class="slider-pro">
                <div class="sp-slides">
                    <div class="sp-slide">
                        <% if @detail.get_main_image.present? %>
                        <img alt="Image" class="sp-image" src="/frontend/css/images/blank.gif" data-src="<%= @detail.get_main_image.image.detail_slide_medium %>" data-small="<%= @detail.get_main_image.image.detail_slide_small %>" data-medium="<%= @detail.get_main_image.image.detail_slide_medium %>" data-large="<%= @detail.get_main_image.image.detail_slide_large %>" data-retina="<%= @detail.get_main_image.image.detail_slide_large %>">
                        <% end %>
                    </div>
                    <% @detail.get_extra_images.each do |item| %>
                    <div class="sp-slide">
                        <img alt="Image" class="sp-image" src="/frontend/css/images/blank.gif" data-src="<%= item.image.detail_slide_medium %>" data-small="<%= item.image.detail_slide_small %>" data-medium="<%= item.image.detail_slide_medium %>" data-large="<%= item.image.detail_slide_large %>" data-retina="<%= item.image.detail_slide_large %>">
                        <p class="sp-layer sp-black sp-padding" data-position="bottomLeft" data-vertical="0" data-width="100%" data-show-transition="up"><%= item.title %></p>
                    </div>
                    <% end %>
                </div>
                <div class="sp-thumbnails">
                    <img alt="Image" class="sp-thumbnail" src="<%= @detail.get_main_image.image.detail_slide_medium if @detail.get_main_image.present? %>">
                    <% @detail.get_extra_images.each do |item| %>
                    <img alt="Image" class="sp-thumbnail" src="<%= item.image.detail_slide_medium %>">
                    <% end %>
                </div>
            </div>

            <hr>
            <% end %>
            <div class="row">
                <div class="col-md-3">
                    <h3><strong>Giới thiệu</strong></h3>
                </div>
                <div class="col-md-9">
                    <div class="text-justify"><%= @detail.description.html_safe if !@detail.description.empty? %></div>
                    <h4><strong>Tiện nghi - Dịch vụ khách sạn</strong></h4>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <ul class="list_ok">
                                <% @detail.facilities.each_with_index do |item,index| %>
                                <% if index%2==0 %>
                                <li><%= item.name %></li>
                                <% end %>
                                <% end %>
                            </ul>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <ul class="list_ok">
                                <% @detail.facilities.each_with_index do |item,index| %>
                                <% if index%2==1 %>
                                <li><%= item.name %></li>
                                <% end %>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                    <!-- End row  -->
                </div>
                <!-- End col-md-9  -->
            </div>
            <!-- End row  -->

            <hr>

            <div class="row">
                <div class="col-md-3">
                    <h3><strong>Loại phòng</strong></h3>
                </div>
                <div class="col-md-9">
                    <% @detail.rooms.each do |item| %>
                    <h4><strong><%= item.name %></strong></h4>
                    <div class="text-justify"><%= item.description.html_safe if !item.description.empty? %></div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <ul class="list_ok">
                                <% item.services.each_with_index do |service,index| %>
                                <% if index%2==0 %>
                                <li><%= service.name %></li>
                                <% end %>
                                <% end %>
                            </ul>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <ul class="list_ok">
                                <% item.services.each_with_index do |service,index| %>
                                <% if index%2==1 %>
                                <li><%= service.name %></li>
                                <% end %>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                    <!-- End row  -->
                    <div class="carousel magnific-gallery">
                        <% item.room_images.each do |room_image| %>
                        <div class="item">
                            <%= link_to image_tag(room_image.image.large, alt: item.name), room_image.image.larger.to_s %>
                        </div>
                        <% end %>
                    </div>
                    <!-- End photo carousel  -->
                    <hr>
                    <% end %>
                </div>
                <!-- End col-md-9  -->
            </div>
            <!-- End row  -->

            <hr>
            
            <div class="row">
                <div class="col-md-3">
                    <h3><strong>Quy định</strong></h3>
                </div>
                <div class="col-md-9">
                    <div class="panel-group" id="accordion">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Giờ nhận - trả phòng<i class="indicator icon-plus pull-right"></i></a>
                                </h4>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse">
                                <div class="panel-body text-justify">
                                    <%= @detail.terms_1.html_safe if !@detail.terms_1.empty? %>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Quy định nhận phòng<i class="indicator icon-plus pull-right"></i></a>
                                </h4>
                            </div>
                            <div id="collapseTwo" class="panel-collapse collapse">
                                <div class="panel-body text-justify">
                                    <%= @detail.terms_2.html_safe if !@detail.terms_2.empty? %>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">Quy định hủy đổi của khách sạn<i class="indicator icon-plus pull-right"></i></a>
                                </h4>
                            </div>
                            <div id="collapseThree" class="panel-collapse collapse">
                                <div class="panel-body text-justify">
                                    <%= @detail.terms_3.html_safe if !@detail.terms_3.empty? %>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">Quy định về trẻ em và giường phụ<i class="indicator icon-plus pull-right"></i></a>
                                </h4>
                            </div>
                            <div id="collapseFour" class="panel-collapse collapse">
                                <div class="panel-body text-justify">
                                    <%= @detail.terms_4.html_safe if !@detail.terms_4.empty? %>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseFive">Quy định hủy/đổi dịch vụ<i class="indicator icon-plus pull-right"></i></a>
                                </h4>
                            </div>
                            <div id="collapseFive" class="panel-collapse collapse">
                                <div class="panel-body text-justify">
                                    <%= @detail.terms_5.html_safe if !@detail.terms_5.empty? %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End col-md-9  -->
            </div>
            <!-- End row  -->

            <hr>

            <div class="row">
                <div class="col-md-3">
                    <h3>Đánh giá</h3>
                    <% if current_user.present? %>
                    <a href="#" class="btn_1 add_bottom_30" data-toggle="modal" data-target="#myReview">Viết đánh giá</a>
                    <% else %>
                    <a href="#" class="btn_1 add_bottom_30" data-toggle="modal" data-target="#myWarning">Viết đánh giá</a>
                    <% end %>
                </div>
                <div class="col-md-9">
                    <div id="score_detail"><span>7.5</span>Tốt <small>(Trên tổng <%= @detail.reviews.get_active.count %> lượt đánh giá)</small></div>
                    <% @detail.reviews.get_active.each do |item| %>
                    <div class="review_strip_single">
                        <img src="/frontend/img/avatar3.jpg" alt="Image" class="img-circle">
                        <small> - <%= item.created_at.strftime("%d/%m/%Y") %> -</small>
                        <h4><%= item.first_name+" "+item.last_name %></h4>
                        <p class="text-justify"><%= item.content %></p>
                        <% if !item.rate.nil? %>
                        <div class="rating">
                            <% (1..item.rate).each do |item| %><i class="icon-smile voted"></i><% end %>
                        </div>
                        <% end %>
                    </div>
                    <!-- End review strip -->
                    <% end %>
                    <%= link_to "Xem thêm ("+"0"+")", "", class: "btn_1 green" %>
                </div>
            </div>
        </div>
        <!--End  single_tour_desc-->

        <aside class="col-md-4">
            <p class="hidden-sm hidden-xs">
                <a class="btn_map" data-toggle="collapse" href="#collapseMap" aria-expanded="false" aria-controls="collapseMap">Xem trên bản đồ</a>
            </p>
            <div class="box_style_1 margin_30 expose">
                <h3 class="inner">Đặt phòng</h3>
                <%= form_for @order, html: {class: "validate"} do |f| %>
                <% if current_user.present? %><%= f.hidden_field :user_id, value: current_user.id %><% end %>
                <%= f.hidden_field :hotel_id, value: @detail.id %>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-user"></i> Họ (*)</label>
                            <%= f.text_field :first_name, class: "form-control required", value: (current_user.first_name if current_user.present?), placeholder: "Nhập họ tại đây..." %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-user"></i> Tên (*)</label>
                            <%= f.text_field :last_name, class: "form-control required", value: (current_user.last_name if current_user.present?), placeholder: "Nhập tên tại đây..." %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-email"></i> Email</label>
                            <%= f.text_field :email, class: "form-control", value: (current_user.email if current_user.present?), placeholder: "Nhập email tại đây..." %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-mobile-1"></i> Di động (*)</label>
                            <%= f.text_field :phone, class: "form-control required", value: (current_user.phone if current_user.present?), placeholder: "Nhập số di động tại đây..." %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-phone"></i> Điện thoại bàn</label>
                            <%= f.text_field :tel, class: "form-control", placeholder: "Nhập số điện thoại bàn tại đây..." %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label>Loại phòng (*)</label>
                            <select class="form-control" name="order[room_id]" id="room_id">
                                <option value="">Chọn loại phòng cần đặt</option>
                                <% @detail.rooms.each do |item| %>
                                <option value="<%= item.id %>"><%= item.name %></option>
                                <% end %>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-calendar-7"></i> Ngày nhận phòng (*)</label>
                            <input class="form-control" data-date-format="dd/mm/yyyy" name="order[checkin]" type="text" id="check_in" placeholder="Ngày nhận phòng...">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <label><i class="icon-calendar-7"></i> Ngày trả phòng (*)</label>
                            <input class="form-control" data-date-format="dd/mm/yyyy" name="order[checkout]" type="text" id="check_out" placeholder="Ngày trả phòng...">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Số người lớn (*)</label>
                            <div class="numbers-row">
                                <input type="text" value="1" id="adults" class="qty2 form-control" name="order[adult]">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Số trẻ em (*)</label>
                            <div class="numbers-row">
                                <input type="text" value="0" id="children" class="qty2 form-control" name="order[child]">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                            <textarea name="order[note]" id="order_note" class="form-control" style="height:100px" placeholder="Ghi chú thêm..."></textarea>
                        </div>
                    </div>
                </div>
                <br>
                <input type="submit" value="Đặt phòng" class="btn_full">
                <% end %>
            
                <% if current_user.present? %>
                    <% if Naturesoft::Hotels::WishList.check_present(@detail.id, current_user).count == 0 %>
                    <%= link_to '<i class="icon-heart"></i> Yêu thích khách sạn'.html_safe, naturesoft_hotels.add_item_wish_lists_path(hotel_id: @detail.id, user_id: current_user.id), class: "btn_full_outline" %>
                    <% else %>
                    <%= link_to '<i class="icon-heart"></i> Đã yêu thích khách sạn'.html_safe, "javascript:void(0);", class: "btn_full_outline detail-hotel-loved" %>
                    <% end %>
                <% else %>
                    <a href="#" class="btn_full_outline" data-toggle="modal" data-target="#myWishList"><i class="icon-heart"></i> Yêu thích khách sạn</a>
                <% end %>
            </div>
            <!--/box_style_1 -->

            <div class="box_style_4">
                <i class="icon_set_1_icon-57"></i>
                <h4><span>Hotline</span></h4>
                <a href="tel:+84 098 765 4321" class="phone">+84 098 765 4321</a>
                <a href="tel:+84 098 765 4321" class="phone">+84 098 765 4321</a>
                <small>Thứ 2 - Thứ 6 9:00am - 7:30pm</small><br>
                <small>Thứ 7 - Chủ nhật 9:00am - 7:00pm</small>
            </div>

        </aside>
    </div>
    <!--End row -->
</div>
<!--End container -->