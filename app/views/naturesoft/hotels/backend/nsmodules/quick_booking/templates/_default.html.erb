<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="quickRegisterLabel"><%= nsmodule.name %></h4>
</div>
<div class="modal-body">
    <div id="message-review">
    </div>
    <%= form_for Naturesoft::Hotels::QuickOrder.new, url: naturesoft_hotels.quick_bookings_path, html: {class: "validate", id: "review_hotel"} do |f| %>
        <div class="form-group">
            <textarea class="form-control required" name="quick_order[message]" style="height:100px" placeholder="Không muốn mất thời gian tìm kiếm, lựa chọn? Hãy để lại yêu cầu đặt phòng và thông tin liên lạc của bạn tại đây. Chúng tôi sẽ liên hệ với bạn trong vòng 12 tiếng giờ hành chính."></textarea>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" name="quick_order[first_name]" placeholder="Nhập họ và tên đệm của bạn (*)..." class="form-control required">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" name="quick_order[last_name]" placeholder="Nhập tên của bạn (*)..." class="form-control required">
                </div>
            </div>
        </div>
        <!-- End row -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="email" name="quick_order[email]" placeholder="Nhập địa chỉ email hợp lệ..." class="form-control required">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="phone" name="quick_order[phone]" placeholder="Nhập số điện thoại (*)..." class="form-control required">
                </div>
            </div>
        </div>
        <!-- End row -->
        <input type="submit" value="Đặt Phòng" class="btn_1">
    <% end %>
</div>