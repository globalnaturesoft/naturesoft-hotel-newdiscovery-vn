<section id="hero" class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div id="login">
                    <div class="text-center"><img src="/frontend/img/logo_sticky.png" alt="Image" data-retina="true"></div>
                    <hr>
                    <% if devise_error_messages!.present? %><div class="alert alert-danger" id="register"><%= devise_error_messages! %></div><% end %>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "validate", method: :post }) do |f| %>
                        <p>Nhập email đã đăng ký để lấy lại mật khẩu.</p>
                        <div class="form-group">
                            <label>Email</label>
                            <%= f.email_field :email, autofocus: true, class: "form-control email required", placeholder: "Nhập email tại đây..." %>
                        </div>
                        <%= f.submit "Lấy lại mật khẩu", class: "btn_full" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>