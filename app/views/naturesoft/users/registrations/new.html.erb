<!-- Registration form -->

<section id="hero" class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div id="login">
                    <div class="text-center"><img src="/frontend/img/logo_sticky.png" alt="Image" data-retina="true"></div>
                    <hr>
                    
                    <% if devise_error_messages!.present? %><div class="alert alert-danger" id="register"><%= devise_error_messages! %></div><% end %>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "validate"}) do |f| %>
                    <input type="hidden" name="user[user_group_id]" id="user_group_id" value="1">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Họ (*)</label>
                                    <%= f.text_field :first_name, autofocus: true, class: "form-control required", placeholder: "Your first name" %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Tên (*)</label>
                                    <%= f.text_field :last_name, class: "form-control required", placeholder: "Your last name" %>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email (*)</label>
                            <%= f.email_field :email, class: "form-control required", placeholder: "Your email" %>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu (*)</label>
                            <%= f.password_field :password, autocomplete: "off", class: "form-control required", id: "password", placeholder: "Password" %>
                        </div>
                        <div class="form-group">
                            <label>Nhập lại mật khẩu (*)</label>
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control required", id: "password_confirmation", placeholder: "Confirm password" %>
                        </div>
                        <div id="pass-info" class="clearfix"></div>
                        <button  type="submit" class="btn_full">Tạo tài khoản mới</button>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- /registration form -->