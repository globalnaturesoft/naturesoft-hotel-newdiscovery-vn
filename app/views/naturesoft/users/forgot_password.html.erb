<section id="hero" class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div id="login">
                    <div class="text-center"><img src="/frontend/img/logo_sticky.png" alt="Image" data-retina="true"></div>
                    <hr>
                    <%= form_for(:user, :url => password_path(:user)) do |f| %>
                        <p>Nhập email đã đăng ký để lấy lại mật khẩu.</p>
                        <div class="form-group">
                            <label>Email</label>
                            <%= f.email_field :email, autofocus: true, class: "form-control email required", placeholder: "Nhập email tại đây..." %>
                        </div>
                        <button class="btn_full">Lấy lại mật khẩu</button>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>