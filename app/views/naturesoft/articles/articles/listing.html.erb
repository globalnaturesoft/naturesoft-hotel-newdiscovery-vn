<section class="parallax-window" data-parallax="scroll" data-image-src="<%= !@current_menu.nil? ? @current_menu.image.default : nil %>" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1><%= @current_menu.name %></h1>
            <p><%= @current_menu.description %></p>
        </div>
    </div>
</section>
<!-- End section -->

<div id="position">
    <div class="container">
        <ul>
            <li><%= link_to "Trang Chủ", naturesoft_hotel_newdiscovery_vn.root_path %></li>
            <li><%= @current_menu.name %></li>
        </ul>
    </div>
</div>
<!-- End position -->

<div class="container margin_60">
    <div class="row">

        <div class="col-md-9">
            <div class="box_style_1">
                <% if @articles.count == 0 %>
                    <p>Không tìm thấy bài viết</p>
                <% else %>
                    <% @articles.each do |item| %>
                        <div class="post">
                            <%= link_to image_tag(item.image_url.lager, alt: "786x310", class: "img-responsive"), naturesoft_articles.blog_detail_path(blog_id: item.id, title: url_friendly(item.title)) %>
                            <div class="post_info clearfix">
                                <div class="post-left">
                                    <ul>
                                        <li><i class="icon-calendar-empty"></i> Đăng ngày <span><%= item.created_at.strftime("%d/%m/%Y") %></span></li>
                                        <li><i class="icon-inbox-alt"></i> Chuyên mục: <% item.categories.each_with_index do |c,index| %><% if index == 0 %><%= c.name %><% end %><% if index > 0 %><%= ", " + c.name %><% end %><% end %></li>
                                        <li><i class="icon-tags"></i> Nhãn:
                                        <% if !item.get_tags.empty? %>
                                            <% len = item.get_tags.length %>
                                            <% item.get_tags.each_with_index do |tag,i| %>
                                                <% if i+1==len %>
                                                    <%= link_to(tag,'') %>
                                                <% else %>
                                                    <%= link_to(tag,'') %>,
                                                <% end %>
                                            <% end %>
                                        <% end %>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <h2><strong><%= item.title %></strong></h2>
                            <div class="text-justify">
                                <p><%= truncate(strip_tags(item.content.html_safe), length: 360, omission: ' [...]') %></p>
                            </div>
                            <%= link_to "Đọc tiếp", naturesoft_articles.blog_detail_path(blog_id: item.id, title: url_friendly(item.title)), class: "btn_1" %>
                        </div>
                        <!-- end post -->
        
                        <hr>
                    <% end %>
                <% end %>
            </div>
            <hr>

            <div class="text-center">
                <%= will_paginate @articles, previous_label: 'Trang trước', next_label: 'Trang sau', renderer: BootstrapPagination::Rails %>
            </div>
        </div>
        <!-- End col-md-8-->

        <aside class="col-md-3">

            <%= render "/modules/blog_sidebar" %>

        </aside>
        <!-- End aside -->

    </div>
    <!-- End row-->
</div>
<!-- End container -->