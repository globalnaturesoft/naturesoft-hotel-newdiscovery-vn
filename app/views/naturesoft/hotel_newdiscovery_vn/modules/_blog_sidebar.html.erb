<div class="widget">
    <div class="input-group">
        <%= form_tag("", method: "get", class: "input-group") do %>
            <input type="text" name="key" value="<%= params[:key] if params[:key].present? %>" class="form-control" placeholder="Tìm kiếm...">
            <span class="input-group-btn">
            <button class="btn btn-default" type="submit" style="margin-left:0;"><i class="icon-search"></i></button>
            </span>
        <% end %>
    </div>
    <!-- /input-group -->
</div>
<!-- End Search -->
<hr>
<div class="widget" id="cat_blog">
    <%= position("hotel_newdiscovery_vn::categories-blog-sidebar") %>
</div>
<!-- End widget -->

<hr>

<div class="widget">
    <h4>Có thể bạn quan tâm</h4>
    <ul class="recent_post">
        <% Naturesoft::Articles::Article.get_recent_posts.each do |item| %>
        <li>
            <i class="icon-calendar-empty"></i> <%= item.created_at.strftime("%d/%m/%Y") %>
            <div><%= link_to item.title, naturesoft_articles.blog_detail_path(id: item.id, title: url_friendly(item.title)) %></div>
        </li>
        <% end %>
    </ul>
</div>
<!-- End widget -->
