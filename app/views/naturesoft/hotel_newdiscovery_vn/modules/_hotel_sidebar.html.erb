<div id="filters_col">
    <a data-toggle="collapse" href="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters" id="filters_col_bt"><i class="icon_set_1_icon-65"></i>Bộ lọc khách sạn <i class="icon-plus-1 pull-right"></i></a>
    <div class="collapse in" id="collapseFilters">
        <%= form_tag(naturesoft_hotels.hotels_grid_path, method: "get") do %>
        <%= hidden_field_tag :menu_id, @current_menu.id %>
        <div class="filter_type">
            <h6>Tìm khách sạn</h6>
            <div class="form-group">
                <input type="text" name="keyword" class="form-control" placeholder="Tìm theo tên, loại, khu vực" value="">
            </div>
        </div>
        <div class="filter_type">
            <h6>Thành phố</h6>
            <div class="form-group">
                <select class="form-control" name="area_id">
                    <% Naturesoft::Areas::Area.order("name asc").each do |item| %>
                        <% if item.level == 1 %>
                            <option value="<%= item.id %>" class="font-bold"><%= item.name %></option>
                            <% item.children.order("name asc").each do |child_1| %>
                            <option>-- <%= child_1.name %></option>
                            <% child_1.children.order("name asc").each do |child_2| %>
                            <option value="<%= child_2.id %>">-- <%= child_1.name %> - <%= child_2.name %></option>
                            <% end %>
                            <% end %>
                        <% end %>
                    <% end %>
                </select>
            </div>
        </div>
        <div class="filter_type">
            <h6>Giá</h6>
            <ul>
                <li><label><input type="checkbox">Đang khuyến mãi</label></li>
                <li><label><input type="checkbox">Dưới 500,000 VNĐ</label></li>
                <li><label><input type="checkbox">Từ 500,000 - 1,000,000 VNĐ</label></li>
                <li><label><input type="checkbox">Từ 1,00,000 - 2,000,000 VNĐ</label></li>
                <li><label><input type="checkbox">Từ 2,000,000 - 5,000,000 VNĐ</label></li>
                <li><label><input type="checkbox">Trên 5,000,000 VNĐ</label></li>
            </ul>
        </div>
        <div class="filter_type">
            <h6>Tiêu chuẩn</h6>
            <ul>
                <li><label><input type="checkbox" name="hotel_rating" value="5"><span class="rating">
                <i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i>
                </span>(<%= Naturesoft::Hotels::Hotel.get_hotel_stars(5) %>)</label></li>
                <li><label><input type="checkbox" name="hotel_rating" value="4"><span class="rating">
                <i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81"></i>
                </span>(<%= Naturesoft::Hotels::Hotel.get_hotel_stars(4) %>)</label></li>
                <li><label><input type="checkbox" name="hotel_rating" value="3"><span class="rating">
                <i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81"></i><i class="icon_set_1_icon-81"></i>
                </span>(<%= Naturesoft::Hotels::Hotel.get_hotel_stars(3) %>)</label></li>
                <li><label><input type="checkbox" name="hotel_rating" value="2"><span class="rating">
                <i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81"></i><i class="icon_set_1_icon-81"></i><i class="icon_set_1_icon-81"></i>
                </span>(<%= Naturesoft::Hotels::Hotel.get_hotel_stars(2) %>)</label></li>
                <li><label><input type="checkbox" name="hotel_rating" value="1"><span class="rating">
                <i class="icon_set_1_icon-81 voted"></i><i class="icon_set_1_icon-81"></i><i class="icon_set_1_icon-81"></i><i class="icon_set_1_icon-81"></i><i class="icon_set_1_icon-81"></i>
                </span>(<%= Naturesoft::Hotels::Hotel.get_hotel_stars(1) %>)</label></li>
            </ul>
        </div>
        <div class="filter_type">
            <h6>Loại</h6>
            <ul>
                <% Naturesoft::Hotels::HotelType.order("name asc").each do |item| %>
                <li><label><input type="checkbox" name="type_id" value="<%= item.id %>"><%= item.name %></label></li>
                <% end %>
            </ul>
        </div>
        <div class="filter_type">
            <h6>Đánh giá</h6>
            <ul>
                <li><label><input type="checkbox">Tuyệt vời: 9+ (0)</label></li>
                <li><label><input type="checkbox">Rất tốt: 8+ (0)</label></li>
                <li><label><input type="checkbox">Tốt: 7+ (0)</label></li>
                <li><label><input type="checkbox">Tạm chấp nhận: 6+ (0)</label></li>
                <li><label><input type="checkbox">Không tốt lắm: 5+ (0)</label></li>
                <li><label><input type="checkbox">Không có đánh giá: (0)</label></li>
            </ul>
        </div>
        <div class="filter_type">
            <h6>Tiện nghi - Dịch vụ</h6>
            <ul>
                <% Naturesoft::Hotels::Facility.order("name asc").each do |item| %>
                <li><label><input type="checkbox" name="facility_id" value="<%= item.id %>"><%= item.name %></label></li>
                <% end %>
            </ul>
        </div>
        
        <div class="filter_type">
            <input type="submit" value="Submit" class="btn_1" id="submit-contact">
        </div>
        <% end %>
    </div>
    <!--End collapse -->
</div>
<!--End filters col-->
<div class="box_style_2">
    <i class="icon_set_1_icon-57"></i>
    <h4><span>Hotline</span></h4>
    <a href="tel:+84 098 765 4321" class="phone">+84 098 765 4321</a>
    <a href="tel:+84 098 765 4321" class="phone">+84 098 765 4321</a>
